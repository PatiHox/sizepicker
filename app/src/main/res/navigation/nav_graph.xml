<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.sizepicker.fragments.main.MainFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_MainFragment_to_ClothingTypeFragment"
            app:destination="@id/ClothingTypeFragment" />
        <action
            android:id="@+id/action_MainFragment_to_aboutAuthorFragment"
            app:destination="@id/aboutAuthorFragment" />
        <action
            android:id="@+id/action_MainFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment" />
    </fragment>
    <fragment
        android:id="@+id/ClothingTypeFragment"
        android:name="com.example.sizepicker.fragments.clothing_type.ClothingTypeFragment"
        tools:layout="@layout/fragment_clothing_type">

        <action
            android:id="@+id/action_ClothingTypeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_ClothingTypeFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
        <argument
            android:name="clothingType"
            app:argType="com.example.sizepicker.data.entities.ClothingType" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.sizepicker.fragments.settings.SettingsFragment"
        android:label="@string/settings_title" >
        <action
            android:id="@+id/action_settingsFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_ClothingTypeFragment"
            app:destination="@id/ClothingTypeFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutAuthorFragment"
        android:name="com.example.sizepicker.fragments.about_author.AboutAuthorFragment"
        android:label="Про автора"
        tools:layout="@layout/fragment_about_author">
        <action
            android:id="@+id/action_aboutAuthorFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.example.sizepicker.fragments.about_app.AboutAppFragment"
        android:label="Про додаток"
        tools:layout="@layout/fragment_about_app">
        <action
            android:id="@+id/action_aboutAppFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
</navigation>